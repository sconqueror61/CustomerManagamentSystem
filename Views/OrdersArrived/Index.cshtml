<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />

    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>

    <!-- DataTables -->
    <link rel="stylesheet" href="https://cdn.datatables.net/2.3.0/css/dataTables.dataTables.min.css" />
    <script src="https://cdn.datatables.net/2.3.0/js/dataTables.min.js"></script>
    <style>
        .btndot {
            width: 28px;
            height: 28px;
            border: none;
            background-color: transparent;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            transition: background-color 0.2s ease;
        }

            .btndot:hover {
                background-color: #0d6efd; /* Bootstrap primary */
                color: white;
            }

            .btndot svg {
                pointer-events: none;
            }

        .dropdown-menudot {
            min-width: 100px !important;
        }

        .dropdown-itemdot {
            padding: 0px 5px !important;
            font-size: 12px !important;
        }
    </style>

</head>
<body>

    <table id="myTable" class="display table table-bordered bg-light w-100">
        <thead></thead>
        <tbody></tbody>
    </table>

    <script>
        $(document).ready(function () {
            $.ajax({
                url: "/OrdersArrived/GetArrivedOrders",
                type: "GET",
                success: function (response) {
                    console.log(response);
                    if (response.success && response.data.length > 0) {
                        const data = response.data;

                        const columns = Object.keys(data[0]).map(key => ({
                            title: key,
                            data: key
                        }));

                        columns.push({
                            title: "Operations",
                            data: null,
                            orderable: false,
                            render: function () {
                                return `
                                 <div class="dropdown">
                                     <button class="btndot dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                         <svg width="12" height="14" fill="currentColor" class="bi bi-three-dots-vertical" viewBox="0 0 16 16">
                                             <path d="M9.5 13a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0zm0-5a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0zm0-5a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0z"/>
                                         </svg>
                                     </button>
                                     <div class="dropdown-menu dropdown-menu-right bg-dark text-white dropdown-menudot">
                                         <a class="dropdown-item dropdown-itemdot" href="#">Edit</a>
                                         <a class="dropdown-item dropdown-itemdot text-warning" href="#">Report</a>
                                         <div class="dropdown-divider"></div>
                                         <a class="dropdown-item dropdown-itemdot text-danger" href="#">Delete</a>
                                     </div>
                                 </div>
                                `;
                            }
                        });

                        if ($.fn.DataTable.isDataTable('#myTable')) {
                            $('#myTable').DataTable().clear().destroy();
                        }

                        $('#myTable').DataTable({
                            data: data,
                            columns: columns,
                            responsive: true,
                            autoWidth: false
                        });
                    } else {
                        $('#myTable tbody').html('<tr><td colspan="100%">Veri bulunamadı</td></tr>');
                    }
                },
                error: function (err) {
                    console.error("AJAX hata:", err);
                    $('#myTable tbody').html('<tr><td colspan="100%">Hata oluştu</td></tr>');
                }
            });
        });
    </script>

</body>
</html>
