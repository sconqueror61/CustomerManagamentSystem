@model IEnumerable<CustomerManagementSystem.DB.User>

@{
    Layout = null;
    ViewData["Title"] = "Index";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - ProductsList</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Bootstrap & FontAwesome -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CustomerManagementSystem.styles.css" asp-append-version="true" />
    <link href="~/lib/font-awesome/all.min.css" rel="stylesheet" />
    <script src="~/lib/font-awesome/all.min.js"></script>

    <style>
        .carousel-wrapper {
            background-color: #f0f0e0; /* istersen 'beige' de yazabilirsin */
            padding-top: 40px;
            padding-bottom: 40px;
        }
        .welcome-text {
            font-size: 2rem;
            font-weight: bold;
            text-align: center;
            margin-top: 20px;
            white-space: nowrap;
            overflow: hidden;
            border-right: 2px solid #333;
            width: fit-content;
            margin-left: auto;
            margin-right: auto;
        }

            .welcome-text.show {
                opacity: 1;
                transform: translateY(0);
            }

        body {
            background-color: #f8f9fa;
        }

        .card {
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            border: none;
            border-radius: 15px;
        }

            .card:hover {
                transform: translateY(-10px);
                box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
            }

        .card-img-top {
            height: 200px;
            object-fit: cover;
            border-top-left-radius: 15px;
            border-top-right-radius: 15px;
        }

        .price {
            color: #28a745;
            font-weight: bold;
        }

        .btn-buy {
            background-color: #007bff;
            color: white;
            border-radius: 50px;
            padding: 8px 20px;
        }

            .btn-buy:hover {
                background-color: #0056b3;
            }

        .carousel-img {
            height: 500px; /* ihtiyacına göre ayarla */
            object-fit: cover;
        }

        .welcome-text {
            font-size: 2rem;
            font-weight: bold;
            animation: fadeInUp 1s ease-in-out;
            text-align: center;
            margin-top: 50px; /* artırıldı */
            margin-bottom: 50px; /* alt boşluk da eklendi */
        }

    </style>
</head>
<body class="bg-light">

    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-primary">
        <div class="container-fluid d-flex justify-content-between align-items-center">

            <!-- Sol: Logo ve Menü -->
            <div class="d-flex align-items-center">
                <a class="navbar-brand text-white me-3" href="#">CMS</a>
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-area="" asp-controller="CustomerHome" asp-action="Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-area="" asp-controller="ProductList" asp-action="CustomerIndex">Products</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" href="#">İletişim</a>
                    </li>
                </ul>
            </div>

            <!-- Orta: Search tam ortada -->
            <form class="d-flex mx-auto" style="width: 100%; max-width: 400px; justify-content: center;">
                <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search"
                       style="height: 30px; font-size: 14px; width: 70%;">
                <button class="btn btn-success" type="submit" style="height: 30px; font-size: 14px;">
                    <i class="fa-solid fa-magnifying-glass"></i>
                </button>
            </form>

            <!-- Sağ: LogOut -->
            <div class="d-flex">
                <a class="btn btn-danger" asp-area="" asp-controller="Starting" asp-action="LogOut"
                   style="height: 30px; font-size: 14px;">
                    <i class="fa-solid fa-right-from-bracket"></i> LogOut
                </a>
            </div>

        </div>
    </nav>

    <!-- Full Width Carousel -->
    <div class="w-100">
        <div id="carouselExample" class="carousel slide" data-ride="carousel" data-interval="5000">
            <div class="carousel-inner">
                <div class="carousel-item active">
					<img src="~/image/05a88576-cc16-4487-b887-5064c203c231.jpg" class="d-block w-100 carousel-img" alt="Slide 1">
                </div>
                <div class="carousel-item">
					<img src="~/image/4f5fb813-49ef-4839-98b1-e74799eafa07.jpg" class="d-block w-100 carousel-img" alt="Slide 2">
                </div>
                <div class="carousel-item">
					<img src="~/image/53fdb1d1-50c0-4b35-8df3-d0e2bbe7e93c.jpg" class="d-block w-100 carousel-img" alt="Slide 3">
                </div>
            </div>
            <a class="carousel-control-prev" href="#carouselExample" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Önceki</span>
            </a>
            <a class="carousel-control-next" href="#carouselExample" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Sonraki</span>
            </a>
        </div>
    </div>


    <!-- Welcome Message -->
    <div class="welcome-text" id="welcomeText"></div>

    <!-- Product Cards -->
    <div class="container py-3">
        <div class="row">
            <div class="col-sm-12 col-md-6 col-lg-4 mb-4">
                <div class="card">
					<img src="~/customerimages/92a706e1-5f47-4019-abb4-829f9820d261.jpg" class="card-img-top" alt="Ürün 1">
                    <div class="card-body text-center">
                        <h5 class="card-title">Cars</h5>
                        <a asp-controller="CustomerHome" asp-action="CarIndex" class="btn btn-buy">Review</a>
                    </div>
                </div>
            </div>
            <div class="col-sm-12 col-md-6 col-lg-4 mb-4">
                <div class="card">
					<img src="~/customerimages/names-of-household-appliances-in-english.jpg" alt="Ürün 2">
                    <div class="card-body text-center">
                        <h5 class="card-title">House Hold Apliances </h5>
                        <a asp-controller="CustomerHome" asp-action="HouseStuffsIndex" class="btn btn-buy">Review</a>
                    </div>
                </div>
            </div>
            <div class="col-sm-12 col-md-6 col-lg-4 mb-4">
                <div class="card">
					<img src="~/customerimages/sny04089.jpg_edit.width-640_ln7jm6qxyvkhfhat.jpg" alt="Ürün 3">
                    <div class="card-body text-center">
                        <h5 class="card-title">Clothes</h5>
                        <a asp-controller="CustomerHome" asp-action="ClothesIndex" class="btn btn-buy">Review</a>
                    </div>
                </div>
            </div>
            <div class="col-sm-12 col-md-6 col-lg-4 mb-4">
                <div class="card">
					<img src="~/customerimages/top-15-fashion-accessories-for-men-1.jpg" class="card-img-top" alt="Ürün 4">
                    <div class="card-body text-center">
                        <h5 class="card-title">Accessories</h5>
                        <a asp-controller="CustomerHome" asp-action="AccessoriesIndex" class="btn btn-buy">Review</a>
                    </div>
                </div>
            </div>
             <div class="col-sm-12 col-md-6 col-lg-4 mb-4">
                <div class="card">
					<img src="~/customerimages/beauty-personal-care.jpg" class="card-img-top" alt="Ürün 4">
                    <div class="card-body text-center">
                        <h5 class="card-title">Personal Cares</h5>
                        <a asp-controller="CustomerHome" asp-action="PersonalCaresIndex" class="btn btn-buy">Review</a>
                    </div>
                </div>
            </div>
            <div class="col-sm-12 col-md-6 col-lg-4 mb-4">
                <div class="card">
					<img src="~/customerimages/essential-books.jpg" class="card-img-top" alt="Ürün 4">
                    <div class="card-body text-center">
                        <h5 class="card-title">Books</h5>
                        <a asp-controller="CustomerHome" asp-action="BooksIndex" class="btn btn-buy">Review</a>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <!-- Scripts -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

    <script>
        window.addEventListener('DOMContentLoaded', function () {
            const text = "Welcome to CMS System";
            const el = document.getElementById('welcomeText');
            let index = 0;

            function typeNextChar() {
                if (index < text.length) {
                    el.textContent += text.charAt(index);
                    index++;
                    setTimeout(typeNextChar, 100); // Hız: 100ms
                } else {
                    el.style.borderRight = "none"; // Yazı bittikten sonra imleci gizle
                }
            }

            setTimeout(typeNextChar, 500); // Başlamadan önce biraz gecikme
        });
    </script>


</body>
</html>
