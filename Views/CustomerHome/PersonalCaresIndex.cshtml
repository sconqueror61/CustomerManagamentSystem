@model IEnumerable<CustomerManagementSystem.DB.User>

@{
    Layout = null;
    ViewData["Title"] = "Index";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - ProductsList</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Bootstrap & FontAwesome -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CustomerManagementSystem.styles.css" asp-append-version="true" />
    <link href="~/lib/font-awesome/all.min.css" rel="stylesheet" />
    <script src="~/lib/font-awesome/all.min.js"></script>

    <style>
        body {
            background-color: #f8f9fa;
        }

        .card {
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            border: none;
            border-radius: 15px;
        }

            .card:hover {
                transform: translateY(-10px);
                box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
            }

        .card-img-top {
            height: 250px; /* sabit bir yükseklik istiyorsan */
            object-fit: contain;
            width: 100%;
            border-top-left-radius: 15px;
            border-top-right-radius: 15px;
            background-color: #fff; /* boş kalan alan için beyaz zemin */
        }


        .price {
            color: #28a745;
            font-weight: bold;
        }

        .btn-buy {
            background-color: #007bff;
            color: white;
            border-radius: 50px;
            padding: 8px 20px;
        }

            .btn-buy:hover {
                background-color: #0056b3;
            }

    </style>
</head>
<body class="bg-light">

    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-primary">
        <div class="container-fluid d-flex justify-content-between align-items-center">

            <!-- Sol: Logo ve Menü -->
            <div class="d-flex align-items-center">
                <a class="navbar-brand text-white me-3" href="#">CMS</a>
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-area="" asp-controller="CustomerHome" asp-action="Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-area="" asp-controller="ProductList" asp-action="CustomerIndex">Products</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" href="#">İletişim</a>
                    </li>
                </ul>
            </div>

            <!-- Orta: Search tam ortada -->
            <form class="d-flex mx-auto" style="width: 100%; max-width: 400px; justify-content: center;">
                <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search"
                       style="height: 30px; font-size: 14px; width: 70%;">
                <button class="btn btn-success" type="submit" style="height: 30px; font-size: 14px;">
                    <i class="fa-solid fa-magnifying-glass"></i>
                </button>
            </form>

            <!-- Sağ: LogOut -->
            <div class="d-flex">
                <a class="btn btn-danger" asp-area="" asp-controller="Starting" asp-action="LogOut"
                   style="height: 30px; font-size: 14px;">
                    <i class="fa-solid fa-right-from-bracket"></i> LogOut
                </a>
            </div>

        </div>
    </nav>

    <div class="container mt-5">
        <div id="productContainer" class="row g-3">
            <!-- Ürünler buraya gelecek -->
        </div>
    </div>

    <!-- Scripts -->
    <!-- Slim DEĞİL, tam sürüm bu -->
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

    <script>
        function loadProducts() {
            $.ajax({
                url: "/CustomerHome/GetPersonalCares",
                type: "GET",
                success: function (response) {
                    if (response.success) {
                        const cars = response.data;
                        console.log(cars)
                        cars.forEach(car => {
                            const imageUrl = (car.pimages && car.pimages.length > 0) ? car.pimages[0] : "/images/default.jpg";

                            const cardHtml = `
                                <div class="col-md-4">
                                    <div class="card h-100 shadow">
                                        <img src="${imageUrl}" class="card-img-top" alt="Ürün Görseli">
                                        <div class="card-body">
                                            <h5 class="card-title">${car.description}</h5>
                                            <p class="card-text">${car.explanation}</p>
                                            <p><strong>Fiyat:</strong> ${car.price} ₺</p>
                                            <p><strong>Genişlik:</strong> ${car.width}</p>
                                            <p><strong>Kırılganlık:</strong> ${car.breakibility}</p>
                                            <button class="btn btn-success buy-button" data-id="${car.id}">Satın Al</button>
                                        </div>
                                    </div>
                                </div>
                            `;
                            $('#productContainer').append(cardHtml);
                        });

                        // Satın alma butonuna tıklama
                        $(document).on('click', '.buy-button', function () {
                            const productId = $(this).data('id');
                            alert("Satın alma işlemi başlatıldı! Ürün ID: " + productId);
                            // Buraya POST işlemi eklenebilir
                        });
                    } else {
                        alert("Ürünler alınamadı!");
                    }
                },
                error: function () {
                    alert("Sunucuyla bağlantı kurulamadı.");
                }
            });
        }

        $(document).ready(function () {
            loadProducts(); // burası artık çalışacak
        });
    </script>


</body>
</html>
