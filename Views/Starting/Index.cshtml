@{
    var cards = new List<dynamic>
    {
        new {
            Title = "Products",
            ShowAddButton = true,
            AddButtonUrl = "/Product/Index",
            AddButtonText = "Add Product",
            Links = new List<object> {
                new { Text = "Product List", Url = "/ProductList/Index" },
                new { Text = "Categories", Url = "/PCategories/Index" }
            }
        },
        new {
            Title = "Customers",
            ShowAddButton = false,
            AddButtonUrl = "",
            AddButtonText = "",
            Links = new List<object> {
                new { Text = "Customer List", Url = "/Home/Index" }
            }
        },
        new {
            Title = "Orders",
            ShowAddButton = false,
            AddButtonUrl = "",
            AddButtonText = "",
            Links = new List<object> {
                new { Text = "Arrived Orders", Url = "/OrdersArrived/Index" },
            }
        }
    };
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Welcome</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">

    <!-- AOS Animation -->
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet" />

    <style>
        body {
            font-family: 'Roboto', sans-serif;
            background: linear-gradient(135deg, #f0f2f5, #cfd9df);
            min-height: 100vh;
        }

        .heading {
            font-size: 2.5rem;
            font-weight: bold;
            text-align: center;
            margin-bottom: 2rem;
            color: #333;
        }

        .card {
            border: none;
            border-radius: 15px;
            box-shadow: 0 4px 15px rgba(0,0,0,0.1);
            transition: transform 0.2s ease;
        }

            .card:hover {
                transform: translateY(-5px);
            }

        .card-header {
            background-color: #0d6efd;
            color: white;
            border-top-left-radius: 15px;
            border-top-right-radius: 15px;
        }

        a {
            text-decoration: none;
        }

        .card-body a {
            display: inline-block;
            color: #0d6efd;
            margin-bottom: 0.5rem;
        }
    </style>
</head>
<body>
    <div class="container py-5">
        <div class="heading" data-aos="fade-down">
            WELCOME
        </div>

        <div class="row justify-content-center">
            @foreach (var card in cards)
            {
                <div class="col-md-4 mb-4" data-aos="fade-up">
                    <div class="card h-100">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <h5 class="mb-0">@card.Title</h5>
                            @if (card.ShowAddButton)
                            {
                                <a class="btn btn-warning btn-sm" href="@card.AddButtonUrl">
                                    <i class="fas fa-plus"></i> @card.AddButtonText
                                </a>
                            }
                        </div>
                        <div class="card-body">
                            <h6>Quick Links</h6>
                            @foreach (var link in card.Links)
                            {
                                <div>
                                    <a href="@link.Url"><i class="fas fa-chevron-right me-2"></i>@link.Text</a>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    <script>
        AOS.init({
            duration: 800,
            once: true
        });
    </script>
</body>
</html>
