@{
    var cards = new List<dynamic>
    {
        new {
            Title = "Products",
            ShowAddButton = true,
            AddButtonUrl = "#",
            AddButtonText = "Add Product",
            Links = new List<object> {
                new { Text = "Product List", Url = "#" },
                new { Text = "Categories", Url = "#" }
            }
        },
        new {
            Title = "Customers",
            ShowAddButton = false,
            AddButtonUrl = "",
            AddButtonText = "",
            Links = new List<object> {
                new { Text = "Customer List", Url = "#" }
            }
        },
        new {
            Title = "Orders",
            ShowAddButton = false,
            AddButtonUrl = "",
            AddButtonText = "",
            Links = new List<object> {
                new { Text = "Order History", Url = "#" },
                new { Text = "New Orders", Url = "#" }
            }
        }
    };
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Welcome</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
</head>
<body>
    <div class="container mt-5">
        <h3 class="text-center mb-4">WELCOME</h3>
        <div class="row justify-content-center">
            @foreach (var card in cards)
            {
                <div class="col-md-4 mb-4">
                    <div class="card h-100">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <h5 class="mb-0">@card.Title</h5>
                            @if (card.ShowAddButton)
                            {
                                <a class="btn btn-primary btn-sm" href="@card.AddButtonUrl">
                                    <i class="fas fa-plus"></i> @card.AddButtonText
                                </a>
                            }
                        </div>
                        <div class="card-body" style="cursor:pointer;">
                            <h6>Quick Links</h6>
                            @foreach (var link in card.Links)
                            {
                                <div class="mb-2">
                                    <a href="@link.Url">@link.Text</a>
                                </div>
                            }
                        </div>

                    </div>
                </div>
            }
        </div>
    </div>
</body>
</html>
