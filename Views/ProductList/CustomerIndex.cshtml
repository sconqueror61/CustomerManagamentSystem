@{
	var products = ViewBag.Products as List<CustomerManagementSystem.DB.Product>;
	var viewbagCategoryId = ViewBag.categoryId as int?;
}

@{
	Layout = null;
	ViewData["Title"] = "CustomerIndex";
}

<!DOCTYPE html>
<html lang="tr">
<head>
	<meta charset="utf-8" />
	<title>@ViewData["Title"] - CustomerProductsList</title>
	<meta name="viewport" content="width=device-width, initial-scale=1" />
	<link href="~/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/CustomerManagementSystem.styles.css" asp-append-version="true" />
	<link href="~/font-awesome/all.min.css" rel="stylesheet" />

	<style>
		.product-image {
			width: 100%; /* Resmin genişliğini tamamen kapsayıcıya uydurur */
			height: 200px; /* Yüksekliği sabitler */
			object-fit: contain; /* Resmin doğru şekilde sığmasını sağlar */
			object-position: center; /* Resmin merkezlenmesini sağlar */
		}

        #highFilter, #lowFilter {
            white-space: nowrap;
            padding: 6px 12px;
        }

	</style>

</head>

<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary shadow-sm">
        <div class="container-fluid px-4 d-flex justify-content-between align-items-center">

            <!-- Sol: Logo ve Menü -->
            <div class="d-flex align-items-center gap-4">
                <a class="navbar-brand fw-bold text-white" href="#">CMS</a>
                <ul class="navbar-nav flex-row gap-3">
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-area="" asp-controller="CustomerHome" asp-action="Index">
                            <i class="fa-solid fa-house"></i> Home
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-danger" asp-area="" asp-controller="ProductList" asp-action="CustomerIndex">
                            <i class="fa-solid fa-bolt-lightning"></i> Products
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-warning" asp-area="" asp-controller="UserBasket" asp-action="Index">
                            <i class="fa-solid fa-cart-shopping"></i> Shopping Basket
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-info" asp-area="" asp-controller="Order" asp-action="Index">
                            <i class="fa-solid fa-list-check"></i> Orders
                        </a>
                    </li>
                </ul>
            </div>

            <!-- Orta: Search -->
            <form class="d-flex mx-auto w-100 justify-content-center" style="max-width: 400px;">
                <input class="form-control me-2" type="search" placeholder="Search..." aria-label="Search"
                       style="height: 34px; font-size: 14px;">
                <button class="btn btn-success" type="submit" style="height: 34px;">
                    <i class="fa-solid fa-magnifying-glass"></i>
                </button>
            </form>

            <!-- Sağ: LogOut -->
            <div class="text-end">
                <a class="btn btn-danger d-flex align-items-center gap-2" asp-area="" asp-controller="Starting" asp-action="LogOut"
                   style="height: 34px; font-size: 14px;">
                    <i class="fa-solid fa-right-from-bracket"></i> LogOut
                </a>
            </div>
        </div>
    </nav>

    <!-- Ana İçerik: Kategori + Sıralama + Ürünler -->
    <div class="container mt-4">

        <!-- Kategori ve Sıralama (Tek Satır) -->
        <div class="d-flex flex-wrap justify-content-between align-items-center mb-4">

            <!-- Sol: Kategori Butonları -->
            <div id="buttonContainer" class="d-flex flex-wrap gap-2 align-items-center">
                <!-- Dinamik kategori butonları buraya gelir -->
            </div>

            <!-- Sağ: Sıralama Butonları -->
            <div class="d-flex gap-2 align-items-center mt-2 mt-md-0">
                <button class="btn btn-outline-secondary d-flex align-items-center gap-1" id="highFilter">
                    <i class="fa-solid fa-arrow-up"></i> <span>Up $</span>
                </button>
                <button class="btn btn-outline-secondary d-flex align-items-center gap-1" id="lowFilter">
                    <i class="fa-solid fa-arrow-down"></i> <span>Down $</span>
                </button>
            </div>

        </div>

        <!-- Ürünler -->
        <div id="productContainer" class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-4">
            <!-- Ürün kartları burada gösterilecek -->
        </div>
    </div>
	<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/bootstrap/dist/js/bootstrap.min.js"></script>
	<script src="~/font-awesome/all.min.js"></script>
	<script src="~/common.js"></script>
    <script>
        let selectedCategoryId = @ViewBag.categoryId ?? 0;
        let currentSortOrder = null;

        $(document).ready(function () {
            const buttonContainer = $("#buttonContainer");

            // Kategorileri getir ve butonları oluştur
            $.ajax({
                url: "/Pcategories/GetCategoryByIds",
                type: "GET",
                dataType: "json",
                success: function (catResponse) {
                    buttonContainer.empty();

                    if (!catResponse.data || catResponse.data.length === 0) {
                        buttonContainer.text("Kategori bulunamadı.");
                        return;
                    }

                    catResponse.data.forEach(function (category) {
                        const isSelected = selectedCategoryId === category.id;

                        const button = $("<button>")
                            .addClass("btn filter-btn me-2 mb-2")
                            .addClass(isSelected ? "btn-primary" : "btn-outline-primary")
                            .attr("data-id", category.id)
                            .text(category.categories)
                            .on("click", function () {
                                if (selectedCategoryId !== category.id) {
                                    selectedCategoryId = category.id;
                                } else {
                                    selectedCategoryId = 0;
                                }

                                $(".filter-btn").removeClass("btn-primary").addClass("btn-outline-primary");
                                if (selectedCategoryId !== 0) {
                                    $(this).removeClass("btn-outline-primary").addClass("btn-primary");
                                }

                                loadProducts();
                            });

                        buttonContainer.append(button);
                    });

                    loadProducts(); // İlk yükleme
                },
                error: function () {
                    buttonContainer.text("Kategoriler yüklenemedi.");
                }
            });

                 function loadProducts() {
            $.ajax({
                url: "/ProductList/GetAllProducts",
                type: "GET",
                data: { categoryId: selectedCategoryId },
                dataType: "json",
                success: function (response) {
                    console.log("response", response)

                    const container = $("#productContainer");

                    if (!response.success || !response.data || response.data.length === 0) {
                        container.html(`<p class="text-center">Ürün bulunamadı.</p>`);
                        return;
                    }

                    // 🔽 Gelen ürünler
                    let products = response.data;

                    // 🔄 Sıralama işlemi
                    if (currentSortOrder === "asc") {
                        products.sort((a, b) => a.price - b.price);
                    }
                    if (currentSortOrder === "desc") {
                        products.sort((a, b) => b.price - a.price);
                    }

                    // 🔨 HTML oluştur
                    let html = "";
                    products.forEach(item => {
                        const image = item.pimages?.length > 0 ? item.pimages[0] : "/images/no-image.png";
                        const id = uuidv4();

                        let buttonHtml = "";

                        if (item.basketCount > 0) {
                            buttonHtml = `
                                <div class="d-none flex-column align-items-center" id="addBasketDiv${id}">
                                    <div class="d-flex align-items-center gap-2 mb-2">
                                        <button class='btn btn-primary' onClick="addBasket('${id}')">
                                            <i class="fa-solid fa-cart-arrow-down"></i> Add Basket
                                        </button>
                                    </div>
                                </div>
                                <div class="d-flex flex-column align-items-center" id="div${id}">
                                    <div class="d-flex align-items-center gap-2 mb-2">
                                        <button class="btn btn-sm btn-outline-danger" onclick="updateBasket(${item.id}, '${id}', false)">-</button>
                                        <input id="${id}" type="number" min="1" max="2" class="form-control form-control-sm text-center fw-bold" style="width: 70px;" value=${item.basketCount} />
                                        <button class="btn btn-sm btn-outline-success" onclick="updateBasket(${item.id}, '${id}', true)">+</button>
                                    </div>
                                </div>`;
                        } else {
                            buttonHtml = `
                                <div class="d-flex flex-column align-items-center" id="addBasketDiv${id}">
                                    <div class="d-flex align-items-center gap-2 mb-2">
                                        <button class='btn btn-primary' onClick="addBasket('${id}')">
                                            <i class="fa-solid fa-cart-arrow-down"></i> Add Basket
                                        </button>
                                    </div>
                                </div>
                                <div class="d-none flex-column align-items-center" id="div${id}">
                                    <div class="d-flex align-items-center gap-2 mb-2">
                                        <button class="btn btn-sm btn-outline-danger" onclick="updateBasket(${item.id}, '${id}', false)">-</button>
                                        <input id="${id}" type="number" min="1" max="2" class="form-control form-control-sm text-center fw-bold" style="width: 70px;" value=${item.basketCount} />
                                        <button class="btn btn-sm btn-outline-success" onclick="updateBasket(${item.id}, '${id}', true)">+</button>
                                    </div>
                                </div>`;
                        }

                        html += `
                            <div class="col-md-4 mb-4">
                                <div class="card shadow-sm border-0 h-100 hover-shadow transition" style="cursor:pointer;">
                                    <img src="${image}" class="card-img-top img-fluid product-image">
                                    <div class="card-body text-center d-flex flex-column align-items-center">
                                        <h5 class="card-title text-primary">${item.explanation}</h5>
                                        <p class="card-text text-muted">${item.description}</p>
                                        <span class="fw-bold text-success">${item.price}$</span>
                                        ${buttonHtml}
                                    </div>
                                </div>
                            </div>`;
                    });

                    container.html(html);
                },
                error: function () {
                    $("#productContainer").html(`<p class="text-danger text-center">Ürünler yüklenemedi.</p>`);
                }
            });
        }


            // Fiyat filtreleme
            $("#highFilter").click(function () {
                if (currentSortOrder !== "desc") {
                    currentSortOrder = "desc";
                    $("#highFilter").removeClass("btn-outline-secondary").addClass("btn-secondary");
                    $("#lowFilter").removeClass("btn-secondary").addClass("btn-outline-secondary");
                } else {
                    currentSortOrder = null;
                    $("#highFilter").removeClass("btn-secondary").addClass("btn-outline-secondary");
                }
                loadProducts();
            });

            $("#lowFilter").click(function () {
                if (currentSortOrder !== "asc") {
                    currentSortOrder = "asc";
                    $("#lowFilter").removeClass("btn-outline-secondary").addClass("btn-secondary");
                    $("#highFilter").removeClass("btn-secondary").addClass("btn-outline-secondary");
                } else {
                    currentSortOrder = null;
                    $("#lowFilter").removeClass("btn-secondary").addClass("btn-outline-secondary");
                }
                loadProducts();
            });
        });


        function addBasket(id){
            $("#addBasketDiv" + id).addClass("d-none").removeClass("d-flex");
            $("#div" + id).removeClass("d-none").addClass("d-flex");
        }

        function updateBasket(productId, inputId, isIncrease) {
            let amount = parseInt($("#" + inputId).val());

            if (isIncrease) {
                amount += 1;
            } else {
                amount -= 1;
            }

            // Eğer sıfır veya altına düştüyse kaldır
            if (amount <= 0) {
                $("#" + inputId).val(0);
                $("#div" + inputId).addClass("d-none").removeClass("d-flex");
                $("#addBasketDiv" + inputId).removeClass("d-none").addClass("d-flex");
                return;
            }

            // Yeni miktarı input'a yansıt
            $("#" + inputId).val(amount);

            // AJAX isteği — şimdi amount hazır
            $.ajax({
                url: "/UserBasket/UpdateBasketAmount",
                type: "PUT",
                data: {
                    productId: productId,
                    amount: amount
                },
                success: function () {
                    console.log("Miktar güncellendi:", amount);
                },
                error: function () {
                    alert("Beklenmeyen bir hata oluştu.");
                }
            });
        }



    </script>


	<footer class="footer bg-light text-center py-3">
		<div class="container">
			<span class="text-muted">&copy; @DateTime.Now.Year - Customer Management System</span>
		</div>
	</footer>
</body>
</html>
